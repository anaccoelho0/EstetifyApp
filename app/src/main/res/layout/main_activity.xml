<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_estetify"
        android:layout_width="190dp"
        android:layout_height="78dp"
        android:fontFamily="@font/inknut_antiqua_black"
        android:gravity="center"
        android:padding="16dp"
        android:text="ESTETIFY"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/container"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/instrument_sans_medium"
        android:gravity="center"
        android:padding="16dp"
        android:text="CUIDANDO DE VOCÊ"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/container"
        app:layout_constraintStart_toEndOf="@id/tv_estetify"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/containerGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="312dp"
        android:layout_height="51dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#FFCC33"
        android:text="Qual será o local do atendimento?"
        app:layout_constraintEnd_toEndOf="@+id/containerGrade"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/containerGrade" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="459dp"
        android:layout_height="564dp"
        android:layout_marginTop="36dp"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationButton">

        <ImageButton
            android:id="@+id/ib_sobrancelha"
            android:layout_width="107dp"
            android:layout_height="104dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Sobrancelha"
            android:scaleType="center"
            android:src="@drawable/ic_sobrancelha" />

        <ImageButton
            android:id="@+id/ib_maquiagem"
            android:layout_width="94dp"
            android:layout_height="117dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Maquiagem"
            android:src="@drawable/ic_maquiagem" />

        <ImageButton
            android:id="@+id/ib_depilacao"
            android:layout_width="101dp"
            android:layout_height="107dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Depilacao"
            android:src="@drawable/ic_depilacao" />

        <ImageButton
            android:id="@+id/ib_massagem"
            android:layout_width="105dp"
            android:layout_height="117dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Massagem"
            android:src="@drawable/ic_massagem" />

        <ImageButton
            android:id="@+id/ib_salao"
            android:layout_width="101dp"
            android:layout_height="116dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="salao"
            android:src="@drawable/ic_salao" />

        <ImageButton
            android:id="@+id/ib_barbearia"
            android:layout_width="105dp"
            android:layout_height="113dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="barbearia"
            android:src="@drawable/ic_barbearia" />

        <ImageButton
            android:id="@+id/ib_unhas"
            android:layout_width="98dp"
            android:layout_height="107dp"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="unhas"
            android:src="@drawable/ic_unhas" />

        <ImageButton
            android:id="@+id/ib_autocuidado"
            android:layout_width="102dp"
            android:layout_height="108dp"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="autocuidado"
            android:src="@drawable/ic_autocuidado" />

        <TextView
            android:id="@+id/tv_sobrancelha"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/instrument_sans_medium"
            android:padding="0dp"
            android:text="Sobrancelha"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            app:constraint_referenced_ids="gridLayout" />

    </GridLayout>

    <ImageButton
        android:layout_width="47dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="casa"
        android:src="@drawable/ic_casa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>